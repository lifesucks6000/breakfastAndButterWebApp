{{template "base" .}}

{{define "content"}}
  <div class="container">
    <div class="row">
      <div class="col">
        <h1>ABOUT PAGE</h1>
        <p> About section of the page, it gives you more information about the web application and more.</p>

        <p>
          {{if ne (index .StringMap "remote_ip") ""}} 
            Your remote IP address is: {{index .StringMap "remote_ip"}}
          {{else}}
            I dont know your IP address yet. Visit the <a href="/">Home Page</a> so I can set it.
          {{end}}

        </p>
      </div>
    </div>
  </div>
{{end}}